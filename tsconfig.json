{
  "compilerOptions": {
    "target": "ES6",                  // 生成 ES6 代码
    "module": "ES6",                  // 使用 ES6 模块
    "moduleResolution": "node",
    "outDir": "src/js_scripts",          // 输出目录
    "rootDir": "src/scripts",         // 源码目录
    "strict": true,                   // 开启严格类型检查
    "esModuleInterop": true,          // 兼容 CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/scripts/**/*.ts"
  ]
}